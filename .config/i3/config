# Floating Apps: finder, preview (equivalents)
for_window [class="Thunar"] floating enable
for_window [class="Nautilus"] floating enable
for_window [class="Evince"] floating enable
for_window [class="Atril"] floating enable

# Catppuccin Mocha colors
set $bg-color            #1e1e2e
set $inactive-bg-color   #313244
set $text-color          #cdd6f4
set $inactive-text-color #6c7086
set $urgent-bg-color     #f38ba8
set $indicator-color     #89b4fa
set $separator-color     #45475a
set $focused-color       #f38ba8

# Window Colors
# class                 border              background          text                indicator         child_border
client.focused          $focused-color      $focused-color      $text-color          $indicator-color   $focused-color
client.unfocused        $text-color  	    $inactive-bg-color  $inactive-text-color $inactive-bg-color $text-color
client.focused_inactive $text-color	    $inactive-bg-color  $inactive-text-color $inactive-bg-color $text-color
client.urgent           $urgent-bg-color    $urgent-bg-color    $text-color          $urgent-bg-color   $urgent-bg-color

# Gaps (matching AeroSpace's 20px gaps)
gaps inner 20
gaps outer 20
gaps top 50
smart_gaps off

for_window [class="^.*"] border pixel 0
for_window [class="polybar"] border pixel 0
